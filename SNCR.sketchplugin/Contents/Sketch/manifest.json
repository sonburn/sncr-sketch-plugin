{
	"name": "SNCR Plugins",
	"description": "A plugin of Sketch actions which are useful in the workflows of the designers at Synchronoss Technologies Inc.",
	"author": "Jason Burns",
	"homepage": "https://github.com/sonburn/sncr-sketch-plugin",
	"version": 0.59,
	"identifier": "com.sncr.sketch",
	"compatibleVersion": 3,
	"bundleVersion": 1,
	"appcast" : "https://raw.githubusercontent.com/sonburn/sncr-sketch-plugin/master/appcast.xml",
	"commands": [
		{
			"name": "Toggle Toolbar",
			"shortcut": "cmd option l",
			"identifier": "layout-toolbar",
			"handler": "layoutBar",
			"script": "layout-toolbar.js"
		},
		{
			"name": "Layout Artboards…",
			"identifier": "layout-artboards",
			"script": "layout-artboards.js"
		},
		{
			"name": "Create Artboard Titles…",
			"identifier": "create-artboard-titles",
			"script": "artboard-titles.js",
			"handler": "create"
		},
		{
			"name": "Create Artboard Slice…",
			"identifier": "create-artboard-slice",
			"script": "create-artboard-slice.js"
		},
		{
			"name": "Export Wireframes…",
			"identifier": "export-wireframes",
			"script": "export-wireframes.js"
		},
		{
			"name": "Add/Insert",
			"identifier": "add-section-title",
			"script": "section-titles.js",
			"handler": "add"
		},
		{
			"name": "Link Selected",
			"identifier": "link-section-title",
			"script": "section-titles.js",
			"handler": "link"
		},
		{
			"name": "Unlink Selected",
			"identifier": "unlink-section-title",
			"script": "section-titles.js",
			"handler": "unlink"
		},
		{
			"name": "Select All on Page",
			"identifier": "select-section-titles",
			"script": "section-titles.js",
			"handler": "select"
		},
		{
			"name": "Update All in Document",
			"identifier": "update-section-titles",
			"script": "section-titles.js",
			"handler": "update"
		},
		{
			"name": "Settings…",
			"identifier": "section-title-settings",
			"script": "section-titles.js",
			"handler": "settings"
		},
		{
			"name": "Link Selected",
			"identifier": "link-artboard-desc",
			"script": "artboard-descriptions.js",
			"handler": "link"
		},
		{
			"name": "Select All on Page",
			"identifier": "select-artboard-descs",
			"script": "artboard-descriptions.js",
			"handler": "select"
		},
		{
			"name": "Update All on Page",
			"identifier": "update-artboard-descs",
			"script": "artboard-descriptions.js",
			"handler": "update"
		}
	],
	"menu": {
		"items": [
			"layout-toolbar",
			{
				"title": "Layout & Wireframes",
				"items": [
					"layout-artboards",
					"create-artboard-titles",
					"create-artboard-slice",
					"export-wireframes",
				]
			},
			{
				"title": "Section Titles",
				"items": [
					"add-section-title",
					"link-section-title",
					"unlink-section-title",
					"select-section-titles",
					"update-section-titles",
					"section-title-settings",
				]
			},
			{
				"title": "Artboard Descriptions",
				"items": [
					"link-artboard-desc",
					"select-artboard-descs",
					"update-artboard-descs"
				]
			}
		]
	}
}
